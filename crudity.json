{
  "$schema": "https://raw.githubusercontent.com/jlguenego/crudity/master/schema/crudity.json",
  "port": 3500,
  "publicDir": "./public",
  "cors": true,
  "resources": {
    "articles": {
      "pageSize": 10,
      "hateoas": "body",
      "delay": 0
    },
    "users": {
      "pageSize": 15,
      "storage": {
        "type": "mongodb",
        "uri": "mongodb://localhost/crudity-unit-test"
      }
    },
    "events": {
      "pageSize": 12,
      "delay": 0,
      "storage": {
        "type": "mariadb",
        "config": {
          "host": "localhost",
          "database": "crudity_test",
          "port": 3306,
          "user": "root",
          "password": "admin"
        }
      }
    }
  },
  "rootEndPoint": "/api"
}
