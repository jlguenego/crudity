{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "pretty": true,
    "target": "ESNext",
    "outDir": "build",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
